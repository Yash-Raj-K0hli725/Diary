<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="25dp"
        app:cardElevation="0dp"
        android:layout_marginVertical="6dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="?android:selectableItemBackground">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_notesThumb"
                    android:layout_width="70dp"
                    android:layout_height="0dp"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintDimensionRatio="1.1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/notesThumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="5dp" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14sp"
                    android:ellipsize="end"
                    android:fontFamily="@font/alata"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="30dp"
                    android:textColor="#252525"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/menu"
                    app:layout_constraintStart_toEndOf="@id/cv_notesThumb"
                    app:layout_constraintTop_toTopOf="@id/cv_notesThumb" />

                <TextView
                    android:id="@+id/Date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-30dp"
                    android:background="@drawable/bg_time"
                    android:fontFamily="@font/alata"
                    android:maxLength="11"
                    android:paddingStart="10dp"
                    android:paddingTop="30dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="@id/cv_notesThumb"
                    app:layout_constraintStart_toStartOf="@id/cv_notesThumb"
                    app:layout_constraintTop_toBottomOf="@id/cv_notesThumb" />

                <TextView
                    android:id="@+id/Data"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="30dp"
                    android:singleLine="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/cv_notesThumb"
                    app:layout_constraintTop_toBottomOf="@id/Title" />

                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:scaleX="0.3"
                    android:scaleY="0.3"
                    android:src="@drawable/ic_arrow_back"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.95"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/Title"
                    app:tint="@color/soothingBlack" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:text="@string/edit"
                    android:textAlignment="textStart"
                    android:textColor="@color/soothingBlack"
                    app:icon="@drawable/ic_edit"
                    app:iconTint="@color/soothingBlack" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/delete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:text="@string/delete"
                    android:textAlignment="textStart"
                    android:textColor="@color/soothingBlack"
                    app:icon="@drawable/ic_delete"
                    app:iconTint="@color/soothingBlack" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>
